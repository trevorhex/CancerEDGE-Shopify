{% style %}
  .block-icons-{{ block.id }} {
    flex-direction: {{ block.settings.direction }};
    justify-content: {% if block.settings.direction == 'row' %}{{ block.settings.alignment_horizontal }}{% else %}{{ block.settings.alignment_vertical }}{% endif %}{% if block.settings.reverse %}-reverse{% endif %};
    align-items: {% if block.settings.direction == 'row' %}{{ block.settings.alignment_vertical }}{% else %}{{ block.settings.alignment_horizontal }}{% endif %}{% if block.settings.reverse %}-reverse{% endif %};
    gap: {{ block.settings.gap }}rem;
  }

  .block-icons-{{ block.id }} .shopify-block:not(:last-child) .block-icon::after {
    {% unless block.settings.divider %}display: none;{% endunless %}
  }
  .block-icons-{{ block.id }}.direction--row > .shopify-block:not(:last-child) .block-icon::after {
    right: -{{ block.settings.gap | times: 0.5 }}rem;
  }
  .block-icons-{{ block.id }}.direction--column > .shopify-block:not(:last-child) .block-icon::after {
    bottom: -{{ block.settings.gap | times: 0.5 }}rem;
  }

  .block-icons-{{ block.id }} .block-icon p {
    font-size: {{ block.settings.font_size }}px;
    text-align: {{ block.settings.text_align }};
  }

  .block-icons-{{ block.id }} .block-icon svg path {
    fill: rgb(var(--color-accent)) !important;
  }

  @media (max-width: 989px) {
    .block-icons-{{ block.id }} {
      flex-direction: {{ block.settings.direction_tablet }};
      justify-content: {% if block.settings.direction_tablet == 'row' %}{{ block.settings.alignment_horizontal_tablet }}{% else %}{{ block.settings.alignment_vertical_tablet }}{% endif %}{% if block.settings.reverse_tablet %}-reverse{% endif %};
      align-items: {% if block.settings.direction_tablet == 'row' %}{{ block.settings.alignment_vertical_tablet }}{% else %}{{ block.settings.alignment_horizontal_tablet }}{% endif %}{% if block.settings.reverse_tablet %}-reverse{% endif %};
      gap: {{ block.settings.gap_tablet }}rem;
    }

    .block-icons-{{ block.id }} .shopify-block:not(:last-child) .block-icon::after {
      {% unless block.settings.divider_tablet %}display: none;{% endunless %}
    }
    .block-icons-{{ block.id }}.direction--row > .shopify-block:not(:last-child) .block-icon::after {
      right: -{{ block.settings.gap_tablet | times: 0.5 }}rem;
    }
    .block-icons-{{ block.id }}.direction--column > .shopify-block:not(:last-child) .block-icon::after {
      bottom: -{{ block.settings.gap_tablet | times: 0.5 }}rem;
    }

    .block-icons-{{ block.id }} .block-icon p {
      font-size: {{ block.settings.font_size_tablet }}px;
      text-align: {{ block.settings.text_align_tablet }};
    }
  }

  @media (max-width: 749px) {
    .block-icons-{{ block.id }} {
      flex-direction: {{ block.settings.direction_mobile }};
      justify-content: {% if block.settings.direction_mobile == 'row' %}{{ block.settings.alignment_horizontal_mobile }}{% else %}{{ block.settings.alignment_vertical_mobile }}{% endif %}{% if block.settings.reverse_mobile %}-reverse{% endif %};
      align-items: {% if block.settings.direction_mobile == 'row' %}{{ block.settings.alignment_vertical_mobile }}{% else %}{{ block.settings.alignment_horizontal_mobile }}{% endif %}{% if block.settings.reverse_mobile %}-reverse{% endif %};
      gap: {{ block.settings.gap_mobile }}rem;
    }

    .block-icons-{{ block.id }} .shopify-block:not(:last-child) .block-icon::after {
      {% unless block.settings.divider_mobile %}display: none;{% endunless %}
    }
    .block-icons-{{ block.id }}.direction--row > .shopify-block:not(:last-child) .block-icon::after {
      right: -{{ block.settings.gap_mobile | times: 0.5 }}rem;
    }
    .block-icons-{{ block.id }}.direction--column > .shopify-block:not(:last-child) .block-icon::after {
      bottom: -{{ block.settings.gap_mobile | times: 0.5 }}rem;
    }

    .block-icons-{{ block.id }} .block-icon p {
      font-size: {{ block.settings.font_size_mobile }}px;
      text-align: {{ block.settings.text_align_mobile }};
    } 
  }
{% endstyle %}

<ul class="block-icons block-icons-{{ block.id }} direction--{{ block.settings.direction }}{% if block.settings.css_class %} {{ block.settings.css_class }}{% endif %}">
  {%  content_for 'blocks' %}
</ul>

<script>
  {% comment %} Remove div.shopify-block wrapper from li child blocks for accessibility {% endcomment %}
  document.addEventListener('DOMContentLoaded', function () {
    const blockList = document.querySelector('.block-icons-{{ block.id }}');
    if (blockList) {
      const shopifyBlocks = blockList.querySelectorAll('.shopify-block');
      shopifyBlocks.forEach(function (block) {
        while (block.firstChild) {
          block.parentNode.insertBefore(block.firstChild, block);
        }
        block.parentNode.removeChild(block);
      });
    }
  });
</script>

