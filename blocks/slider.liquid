{% style %}
  #shopify-block-{{ block.id }} {
    width: 100%;
  }
{% endstyle %}

<div class="slider-container{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}{% if block.settings.css_class %} {{ block.settings.css_class }}{% endif %}">
  <div
    class="block-slider block-slider-{{ block.id }}"
    role="region"
    aria-roledescription="carousel"
    aria-label="{{ block.settings.slider_label | default: 'Content slider' }}"
    data-auto-rotate="{{ block.settings.auto_rotate }}"
    data-auto-rotate-speed="{{ block.settings.auto_rotate_speed }}"
  >
    {% content_for 'blocks' %}
  </div>
  <div class="slider-sr-status sr-only" aria-live="polite" aria-atomic="true"></div>
</div>

{% schema %}
{
  "name": "t:blocks.slider.label",
  "settings": [
    {
      "type": "text",
      "id": "slider_label",
      "label": "Slider label (for screen readers)",
      "default": "Content slider",
      "info": "Describes the slider for assistive technology users"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:blocks.page_section.settings.color_scheme.label"
    },
    {
      "type": "checkbox",
      "id": "auto_rotate",
      "label": "t:blocks.slider.settings.auto_rotate.label",
      "default": false
    },
    {
      "type": "range",
      "id": "auto_rotate_speed",
      "label": "t:blocks.slider.settings.auto_rotate_speed.label",
      "unit": "sec",
      "default": 4,
      "min": 1,
      "max": 10,
      "step": 0.5
    },
    {
      "type": "header",
      "content": "t:blocks.all.settings.css_header.content"
    },
    {
      "type": "text",
      "id": "css_class",
      "label": "t:blocks.all.settings.css_class.label",
      "info": "t:blocks.all.settings.css_class.info"
    },
  ],
  "blocks": [{ "type": "_slide" }],
  "presets": [
    { "name": "t:blocks.slider.presets.name" }
  ]
}
{% endschema %}