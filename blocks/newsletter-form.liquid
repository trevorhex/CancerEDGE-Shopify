{%- capture form_id -%}newsletter-form-{{ block.id }}{%- endcapture -%}
{%- capture input_id -%}newsletter-form-input-{{ block.id }}{%- endcapture -%}

{% style %}
  .block-newsletter-{{ block.id }} {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: {{ block.settings.gap }}rem;
    margin-top: -0.6rem;
  }

  .block-newsletter-{{ block.id }} {{ block.settings.heading_tag }} {
    font-size: {{ block.settings.heading_font_size }}px !important;
    color: rgb(var(--color-foreground));
    line-height: 1.4;
    letter-spacing: var(--font-heading-letter-spacing);
    margin: 0;
    font-weight: 500;
    text-transform: none;
    white-space: nowrap;
  }

  .block-newsletter-{{ block.id }} .block-newsletter__form {
    position: relative;
    display: flex;
    align-items: center;
    gap: 0.6rem;
  }

  .block-newsletter-{{ block.id }} .input {
    min-width: 240px;
  }
  

  @media (max-width: 749px) {
    .block-newsletter-{{ block.id }} {
      margin-top: 0;
    }
  }

  @media (max-width: 379px) {
    .block-newsletter-{{ block.id }} .block-newsletter__form {
      flex-direction: column;
      gap: 0.8rem;
    }
  }
{% endstyle %}

<div class="block-newsletter block-newsletter-{{ block.id }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}{% if block.settings.css_class %} {{ block.settings.css_class }}{% endif %}">
  {% unless block.settings.heading == blank %}
    <{{ block.settings.heading_tag }}>{{ block.settings.heading }}</{{ block.settings.heading_tag }}>
  {% endunless %}

  {%- form 'customer', id: form_id, class: 'newsletter-form' -%}
    <input type="hidden" name="contact[tags]" value="newsletter">

    <div class="block-newsletter__form">
      <div>
        <label class="sr-only" for="{{ input_id }}">
          {{ 'newsletter.label' | t }}
        </label>
        <input
          id="{{ input_id }}"
          type="email"
          name="contact[email]"
          class="input"
          value="{{ form.email }}"
          aria-required="true"
          autocorrect="off"
          autocapitalize="off"
          autocomplete="email"
          {% if form.errors %}
            aria-invalid="true"
            aria-describedby="{{ form_id }}-error"
          {% elsif form.posted_successfully? %}
            aria-describedby="{{ form_id }}-success"
          {% endif %}
          placeholder="{{ 'newsletter.label' | t }}"
          required
        >
      </div>
      <button
        type="submit"
        class="button-block button--outlined button--small"
        name="commit"
        id="Subscribe-{{ block.id }}"
        aria-label="{{ 'newsletter.button_label' | t }}"
      >{{ 'newsletter.button_label' | t }}</button>
    </div>

    {%- if form.errors and form.id == form_id -%}
      <small class="newsletter-form__message form__message" id="{{ form_id }}-error" role="alert">
        <span class="svg-wrapper" aria-hidden="true">
          {{- 'icon-error.svg' | inline_asset_content -}}
        </span>
        {{ form.errors.translated_fields.newsletter_email | capitalize }}
        {{ form.errors.messages.newsletter_email -}}
      </small>
    {%- endif -%}

    {%- if form.posted_successfully? -%}
      <div
        class="newsletter-form__message newsletter-form__message--success form__message"
        id="{{ form_id }}-success"
        role="status"
        aria-live="polite"
        tabindex="-1"
      >
        <span class="svg-wrapper" aria-hidden="true">
          {{- 'icon-success.svg' | inline_asset_content -}}
        </span>
        {{- 'newsletter.success' | t }}
      </div>
    {%- endif -%}
  {%- endform -%}
</div>

{% schema %}
{
  "name": "t:blocks.newsletter-form.label",
  "settings": [
    {
      "type": "header",
      "content": "t:blocks.newsletter-form.settings.heading_header.content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "t:blocks.newsletter-form.settings.heading.label"
    },
    {
      "type": "select",
      "id": "heading_tag",
      "label": "t:blocks.newsletter-form.settings.heading_tag.label",
      "options": [
        { "value": "h1", "label": "H1" },
        { "value": "h2", "label": "H2" },
        { "value": "h3", "label": "H3" },
        { "value": "h4", "label": "H4" },
        { "value": "h5", "label": "H5" },
        { "value": "h6", "label": "H6" }
      ],
      "default": "h2"
    },
    {
      "type": "range",
      "id": "heading_font_size",
      "label": "t:blocks.newsletter-form.settings.heading_font_size.label",
      "min": 14,
      "max": 30,
      "step": 1,
      "unit": "px",
      "default": 28
    },
    {
      "type": "header",
      "content": "t:blocks.newsletter-form.settings.layout_heading.content"
    },
    {
      "type": "range",
      "id": "gap",
      "label": "t:blocks.newsletter-form.settings.gap.label",
      "min": 0,
      "max": 20,
      "step": 0.5,
      "unit": "rem",
      "default": 2
    },
    {
      "type": "header",
      "content": "t:blocks.all.settings.css_header.content"
    },
    {
      "type": "text",
      "id": "css_class",
      "label": "t:blocks.all.settings.css_class.label",
      "info": "t:blocks.all.settings.css_class.info"
    },
  ],
  "presets": [
    { "name": "t:blocks.newsletter-form.presets.name" }
  ]
}
{% endschema %}
