      "label": "Background",
      "default": "#D9D9D9"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Text Color",
      "default": "#2E3490"
    },
    {
      "type": "color",
      "id": "block_bg",
      "label": "Block Background Color",
      "default": "#ffffff"
    },
    {
      "type": "checkbox",
      "id": "slider_on_mobile",
      "label": "Enabled slider on mobile"
    },
    {
      "type": "checkbox",
      "id": "margin-minue",
      "label": "Margin top minus enabled"
    },
    {
      "type": "checkbox",
      "id": "padding-top-0",
      "label": "Padding top 0"
    },
    {
      "type": "checkbox",
      "id": "small_header",
      "label": "Small Header"
    },
    {
      "type": "header",
      "content": "Desktop Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 110,
      "max": 210,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 110
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 110,
      "max": 210,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 110
    },
    {
      "type": "header",
      "content": "Mobile Padding"
    },
    {
      "type": "range",
      "id": "mobile_padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 50
    },
    {
      "type": "range",
      "id": "mobile_padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 50
    }
  ],
  "blocks": [
    {
      "type": "card",
      "name": "Membership Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "heading_icon",
          "label": "Heading Icon"
        },
        {
          "type": "inline_richtext",
          "id": "block_heading",
          "label": "Heading",
          "default": "Ongoing Navigated Support & Advocacy"
        },
        {
          "type": "text",
          "id": "block_subheading",
          "label": "block Subheading",
          "default": "The care you need, the moment you need it."
        },
        {
          "type": "text",
