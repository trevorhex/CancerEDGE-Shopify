{{ 'section-main-page.css' | asset_url | stylesheet_tag }}

{%- style -%}
  
  .section-{{ section.id }}-padding {
    padding-top: 21px;
    padding-bottom: 21px;
    background-color: {{ section.settings.bg_color }};
  }

  @media screen and (min-width: 750px) {
     
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }

  }
  
  @media screen and (min-width: 1024px) {
    
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }

  }
  
{%- endstyle -%}
<div class="default__page--header {% if section.settings.bg_img != blank %}bg__img--enabled{% endif %}">
  {% if section.settings.bg_img != blank %}
     <img src="{{ section.settings.bg_img | image_url: width: 2000, height: 1000, crop: 'center' }}" alt="{{ page.title | escape }}" class="default__page--header--bg" width="auto" height="auto" />
  {% endif %}
  {% if section.settings.add_overlay == true %}
    <div class="default__page--header--overlay" style="background-color: {{ section.settings.overlay_color }}; opacity: {{ section.settings.overlay_opacity }};"></div>
  {% endif %}
  <h1 class="main-page-title page-title page-width">
    {% if page.metafields.custom.custom_page_title != blank %}
      {{ page.metafields.custom.custom_page_title | metafield_tag }}
    {% else %}
      {{ page.title | escape }}
    {% endif %}
  </h1>
</div>

{% if section.settings.show_default_content == true %}
<div class="default__page--wrapper">
  <div class="page-width page-width--narrow section-{{ section.id }}-padding">
    <div class="rte">
      {{ page.content }}
    </div>
  </div>
</div>
{% endif %}

{% schema %}
{
  "name": "t:sections.main-page.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "bg_img",
      "label": "Background Image"
    },
    {
      "type": "checkbox",
      "id": "add_overlay",
      "label": "Add Overlay",
      "default": true
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "Overlay Color",
      "default": "#0B1933"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 1,
      "step": 0.1,
      "unit": "%",
      "label": "Overlay Opacity",
      "default": 0.8
    },
    {
      "type": "checkbox",
      "id": "show_default_content",
      "label": "Show default content",
      "default": true

    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ]
}
{% endschema %}
