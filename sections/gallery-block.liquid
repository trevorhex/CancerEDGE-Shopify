{{ 'gallery-block.css' | asset_url | stylesheet_tag: preload: true }}

{%- style -%}
  
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.mobile_padding_top }}px;
    padding-bottom: {{ section.settings.mobile_padding_bottom }}px;  
    {% if section.settings.bg_image != blank %}
      background-image: url({{ section.settings.bg_image | image_url: width: auto, height: auto }});
    {% else %}
      background-color: {{ section.settings.bg_color }};
    {% endif %}
  }

  .section-{{ section.id }}-padding .section-heading,
  .section-{{ section.id }}-padding .gallery-block-section-title {
    color: {{ section.settings.text_color }};
  }

  .section-{{ section.id }}-padding .overview__block--items {
    background-color: {{ section.settings.block_bg }};
  }

  @media screen and (min-width: 750px) {
     
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }

  }
  
  @media screen and (min-width: 1024px) {
    
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }

  }

  @media screen and (max-width: 749px) {
     
    .section-{{ section.id }}-padding {
      background: {{ section.settings.mobile_bg_color }};
    }

   }

  @media screen and (max-width: 1366px) {
    .section-{{ section.id }}-padding {
      padding-top: 8%;
      padding-bottom: 8%;
    }
  }
    
{%- endstyle -%}

<section class="gallery-block-section section-{{ section.id }}-padding" data-section-id="{{ section.id }}">
  <div class="page-width">
    {% if section.settings.section_heading != blank %}
      <h2 class="gallery-block-section-title text-{{ section.settings.desktop_content_alignment }}">
        {{ section.settings.section_heading }}
      </h2>
    {% endif %}
    {% if section.settings.section_subheading != blank %}
      <div class="gallery-block-section-subtitle text-{{ section.settings.desktop_content_alignment }}">
        {{ section.settings.section_subheading }}
      </div>
    {% endif %}

    <div class="gallery-block-slider-container">
      <div class="{% if section.blocks.size > 3 %}swiper{% endif %} gallery-block-swiper-{{ section.id }}">
        <div class="swiper-wrapper">
          {%- assign widths = '198, 432, 642, 900, 1284, 1800' -%}
          {%- capture sizes -%}
            (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 1.6667 }}px,
            (min-width: 750px) calc((100vw - 130px) / 1.667), calc((100vw - 50px) / 1.667)
          {%- endcapture -%}
          {% for block in section.blocks %}
            <div class="swiper-slide">
              <div class="gallery-block-slider block--{{ block.id }}"data-block-id="{{ block.id }}">
                <div class="gallery-block-image media image-with-text__media" style="padding-bottom: {{ 1 | divided_by: block.settings.image.aspect_ratio | times: 100 }}%;">
                   {{
                      block.settings.image
                      | image_url: width: 1500
                      | image_tag: sizes: sizes, widths: widths, fetchpriority: fetch_priority
                    }}
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
      <div class="gallery-block-next gallery-block-button-next-{{ section.id }}">
         {% render 'swiper-next-arrow' %}
      </div>
      <div class="gallery-block-prev gallery-block-button-prev-{{ section.id }}">
        {% render 'swiper-prev-arrow' %}
      </div>
    </div>

    {% if section.settings.bottom_text != blank %}
      <div class="gallery-block-bottom-text text-{{ section.settings.desktop_content_alignment }}">
        {{ section.settings.bottom_text }}
      </div>
    {% endif %}

    {%- if section.settings.button_label != blank -%}
    <div class="button__wrapper center">
      <a
        {% if section.settings.button_link == blank %}
          role="link" aria-disabled="true"
        {% else %}
          href="{{ section.settings.button_link }}"
        {% endif %}
        class="button button--primary"
        {{ section.shopify_attributes }}
      >
        {{ section.settings.button_label | escape }}
      </a>
    </div>
    {%- endif -%}
    {% if section.settings.label_subtext != blank %}
      <div class="label_subtext_outer">
        <div class="label_subtext_inner center">
          <small>{{ section.settings.label_subtext }}</small>
        </div>
      </div>
    {% endif %}
    
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const galleryDetectionSections = document.querySelectorAll('.gallery-block-section[data-section-id]');
    
    galleryDetectionSections.forEach(function(section) {
      const sectionId = section.getAttribute('data-section-id');
      initializeGalleryDetectionSwiper(sectionId);
    });
  });

  function initializeGalleryDetectionSwiper(sectionId) {
    const swiperContainer = document.querySelector(`.gallery-block-swiper-${sectionId}`);
    
    if (!swiperContainer) return;

    const swiper = new Swiper(`.gallery-block-swiper-${sectionId}`, {
      slidesPerView: 1,
      spaceBetween: 20,
      loop: false,
      grabCursor: true,
      breakpoints: {
        768: {
          slidesPerView: 2,
          spaceBetween: 20,
        },
        1024: {
          slidesPerView: 3,
          spaceBetween: 30,
        }
      },
      navigation: {
        nextEl: '.gallery-block-next',
        prevEl: '.gallery-block-prev',
      },
      keyboard: {
        enabled: true,
        onlyInViewport: true,
      },
      touchRatio: 1,
      touchAngle: 45,
      simulateTouch: true,
      a11y: {
        prevSlideMessage: 'Previous slide',
        nextSlideMessage: 'Next slide',
      },
      autoHeight: false,
      speed: 400,
      effect: 'slide',
      on: {
        init: function () {
          this.slides.forEach(slide => {
            slide.style.height = 'auto';
          });
        },
        resize: function () {
          this.update();
        }
      }
    });
    swiperContainer.swiperInstance = swiper;
  }
</script>

