{
  "name": "Gallery Block",
  "tag": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "section_heading",
      "label": "Section Heading",
      "default": "DNA is not Destiny"
    },
    {
      "type": "richtext",
      "id": "section_subheading",
      "label": "Section Subheading",
      "default": "<p>Your genes only tell part of the story.</p>"
    },
    {
      "type": "richtext",
      "id": "bottom_text",
      "label": "Bottom text",
      "default": "<p>Navigating your health with confidence is easier when you know you're backed by an expert ally.</p>"
    },
    {
      "type": "select",
      "id": "desktop_content_alignment",
      "options": [
        {
          "value": "left",
          "label": "t:sections.image-banner.settings.desktop_content_alignment.options__1.label"
        },
        {
          "value": "center",
          "label": "t:sections.image-banner.settings.desktop_content_alignment.options__2.label"
        },
        {
          "value": "right",
          "label": "t:sections.image-banner.settings.desktop_content_alignment.options__3.label"
        }
      ],
      "default": "center",
      "label": "t:sections.image-banner.settings.desktop_content_alignment.label"
    },
    {
      "type": "richtext",
      "id": "label_subtext",
      "label": "Label Subtext"
    },
    {
      "type": "text",
      "id": "button_label",
      "default": "t:sections.image-with-text.blocks.button.settings.button_label.default",
      "label": "t:sections.image-with-text.blocks.button.settings.button_label.label",
      "info": "t:sections.image-with-text.blocks.button.settings.button_label.info"
    },
    {
      "type": "url",
      "id": "button_link",
