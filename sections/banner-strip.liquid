{{ 'banner-strip.css' | asset_url | stylesheet_tag }}

<section class="cancer-stats-banner section-{{ section.id }}-padding">
  <div class="men-section">
   <img src="{{ section.settings.men_bg | image_url  }}">
    <div class="stat-content">
      <div class="icon-circle">
        <div class="icon male-icon">
          {% render 'icon-men' %}
        </div>
      </div>
      <div class="stat-text">
        <h2 class="stat-text-title"><span class="number">{{ section.settings.men_statistic }}</span></h2>
        <h3 class="stat-text-subtitle">{{ section.settings.men_title }}</h3>
        <p class="stat-text-desc">{{ section.settings.men_description }}</p>
      </div>
    </div>
  </div>
  <div class="women-section">
      <img src="{{ section.settings.women_bg | image_url  }}">
    <div class="stat-content">
      <div class="icon-circle">
        <div class="icon female-icon">
          {% render 'icon-women' %}
        </div>
      </div>
      <div class="stat-text">
        <h2 class="stat-text-title"><span class="number">{{ section.settings.women_statistic }}</span></h2>
        <h3 class="stat-text-subtitle">{{ section.settings.women_title }}</h3>
        <p class="stat-text-desc">{{ section.settings.women_description }}</p>
      </div>
    </div>
  </div>
</section>

{% style %}

  .section-{{ section.id }}-padding .banner-container {
    height: {{ section.settings.banner_height }}px;
    border-radius: {{ section.settings.border_radius }}px;
  }

  .section-{{ section.id }}-padding .stat-content {
    color: {{ section.settings.text_color }};
  }

  .section-{{ section.id }}-padding .stat-text-subtitle,
  .section-{{ section.id }}-padding .stat-text-desc {
    color: {{ section.settings.women_subtext_color }};
  }

  .cancer-stats-banner .icon-circle {
    background: {{ section.settings.icon_bg_color }};
  }

  .section-{{ section.id }}-padding .stat-text h2 .number {
    color: {{ section.settings.men_accent_color }};
  }

  .section-{{ section.id }}-padding .women-section .stat-text h2 .number {
    color: {{ section.settings.women_accent_color }};
  }
  
{% endstyle %}

{% schema %}
{
  "name": "Cancer Statistics Banner",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "men_bg",
      "label": "men background",
    },
    {
      "type": "image_picker",
      "id": "women_bg",
      "label": "Women background",
    },
    {
      "type": "header",
      "content": "Section Settings"
    },
    {
      "type": "range",
      "id": "section_padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Section padding top",
      "default": 36
    },
    {
      "type": "range",
      "id": "section_padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Section padding bottom",
      "default": 36
    },
    {
      "type": "range",
      "id": "banner_height",
      "min": 150,
      "max": 400,
      "step": 10,
      "unit": "px",
      "label": "Banner height",
      "default": 200
    },
    {
      "type": "range",
      "id": "border_radius",
      "min": 0,
      "max": 50,
      "step": 2,
      "unit": "px",
      "label": "Border radius",
      "default": 12
    },
    {
      "type": "header",
      "content": "Men's Section"
    },
    {
      "type": "text",
      "id": "men_statistic",
      "label": "Men's statistic",
      "default": "1 in 2"
    },
    {
      "type": "text",
      "id": "men_title",
      "label": "Men's title",
      "default": "Men"
    },
    {
      "type": "textarea",
      "id": "men_description",
      "label": "Men's description",
      "default": "Will get cancer in their lifetime."
    },
    {
      "type": "color",
      "id": "men_bg_color",
      "label": "Men's background color",
      "default": "#2d1b69"
    },
    {
      "type": "color",
      "id": "men_accent_color",
      "label": "Men's text color",
      "default": "#4fc3f7"
    },
    {
      "type": "color",
      "id": "men_subtext_color",
      "label": "Men's subtext color",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Women's Section"
    },
    {
      "type": "text",
      "id": "women_statistic",
      "label": "Women's statistic",
      "default": "1 in 3"
    },
    {
      "type": "text",
      "id": "women_title",
      "label": "Women's title",
      "default": "Women"
    },
    {
      "type": "textarea",
      "id": "women_description",
      "label": "Women's description",
      "default": "Will get cancer in their lifetime."
    },
    {
      "type": "color",
      "id": "women_bg_color",
      "label": "Women's background color",
      "default": "#c2185b"
    },
    {
      "type": "color",
      "id": "women_accent_color",
      "label": "Women's accent color",
      "default": "#f8bbd9"
    },
    {
      "type": "color",
      "id": "women_subtext_color",
      "label": "Women's subtext color",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "General Styling"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "icon_bg_color",
      "label": "Icon background color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "icon_color",
      "label": "Icon color",
      "default": "#c2185b"
    }
  ],
  "presets": [
    {
      "name": "Cancer Statistics Banner"
    }
  ]
}
{% endschema %}