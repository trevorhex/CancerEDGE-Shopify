{{ 'section-image-card-carousel.css' | asset_url | stylesheet_tag }}

{%- style -%}

  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_mobile_top }}px;
    padding-bottom: {{ section.settings.padding_mobile_bottom }}px;
  }

  .section-{{ section.id }}-padding .image-card-carousel-buttons a.button.button--primary + a.button.button--primary:not(:hover) {
    background: {{ section.settings.second_btn_bg }};
    color: {{ section.settings.second_btn_text }};
  }

  {%- for block in section.blocks -%}
    .image-card-carousel-main #block--{{ block.id }} .step_number {
      {%- if block.settings.steps_number_gradient_color != blank -%}
        background:{{ block.settings.steps_number_gradient_color }};
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      {%- else -%}
        color: {{ block.settings.steps_number_color }};
      {%- endif -%}
    }
    
  {%- endfor -%}
    

  @media screen and (min-width: 750px) {
     
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }

  }
  
  @media screen and (min-width: 1024px) {
    
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }

  }
  
{%- endstyle -%}

<div class="image-card-carousel-main color-{{ section.settings.color_scheme }} section-{{ section.id }}-padding" style="background: {{ section.settings.gradient_background }};">
  <div class="page-width page_full_width_{{ section.settings.page_full_width }}">
    <div class="image-card-carousel-wrap">
      <div class="image-card-carousel-left">
        {% if section.settings.left_image %}
          <img src="{{ section.settings.left_image | image_url }}" alt="Left Image">
        {% endif %}
      </div>
    
      <div class="image-card-carousel-right">
        {% if section.settings.header %}
          <h2>{{ section.settings.header }}</h2>
        {% endif %}

        {% if section.settings.content %}
          <p>{{ section.settings.content }}</p>
        {% endif %}
    
        <div class="swiper image-card-carousel">
          <div class="swiper-wrapper">
            {% for block in section.blocks %}
              <div class="swiper-slide card-slide color-{{ section.settings.color_scheme_inner }}" id="block--{{ block.id }}">
                <div class="swiper-slide image-card-carousel-slide-inner">
                  <div class="step_number">{{ forloop.index }}</div>
                  {% if block.settings.step_title %}
                  <div class="step_title" style="color:{{ section.settings.steps }};">{{ block.settings.step_title }}</div>
                  {% endif %}
                  {% if block.settings.title %}
                  <h4>{{ block.settings.title }}</h4>
                  {% endif %}
                  {% if block.settings.content %}
                  <div class="image-card-content">{{ block.settings.content }}</div>
                  {% endif %}
                </div>
              </div>
            {% endfor %}
          </div>
          <div class="swiper-button-wrap">
            <!-- Navigation Arrows -->
            <div class="image-card-prev">
              <svg width="17" height="14" viewBox="0 0 17 14" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M6.67969 2L1.99992 7L6.67969 12" stroke="white" stroke-width="2" stroke-miterlimit="13.33" stroke-linecap="square"/>
              <path d="M2.70186 7H16" stroke="white" stroke-width="2" stroke-linecap="square" stroke-linejoin="round"/>
              </svg>
            </div>
            <div class="image-card-next">
              <svg width="17" height="14" viewBox="0 0 17 14" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M10.3203 2L15.0001 7L10.3203 12" stroke="white" stroke-width="2" stroke-miterlimit="13.33" stroke-linecap="square"/>
              <path d="M14.2981 7H1" stroke="white" stroke-width="2" stroke-linecap="square" stroke-linejoin="round"/>
              </svg>
            </div>
          </div>
          
        </div>

        {%- if section.settings.disclaimer != blank -%}
          <p class="image-card-carousel--disclaimer">{{ section.settings.disclaimer }}</p>
        {%- endif -%}
      </div>
    </div>
    
    <div class="image-card-carousel-buttons">
      {% if section.settings.left_button_text %}
        <a href="{{ section.settings.left_button_link }}" class="button button--primary">{{ section.settings.left_button_text }}</a>
      {% endif %}
      {% if section.settings.right_button_text %}
        <a href="{{ section.settings.right_button_link }}" class="button button--primary">{{ section.settings.right_button_text }}</a>
      {% endif %}
    </div>
  </div>
</div>


              
{% schema %}
{
  "name": "Image card carousel",
  "settings": [
    {
      "type": "checkbox",
      "id": "page_full_width",
      "label": "Full Width"
    },
    {
      "type": "text",
      "id": "header",
      "label": "Section Header",
      "default": "Your Section Header"
    },
    {
      "type": "text",
      "id": "content",
      "label": "Content"
    },
    {
      "type": "image_picker",
      "id": "left_image",
      "label": "Left Side Image"
    },
    {
      "type": "text",
      "id": "disclaimer",
      "label": "Disclaimer text"
    },
    {
      "type": "text",
      "id": "left_button_text",
      "label": "Left Button Text",
      "default": "Left Button"
    },
    {
      "type": "url",
      "id": "left_button_link",
      "label": "Left Button Link"
    },
    {
      "type": "text",
      "id": "right_button_text",
      "label": "Right Button Text",
      "default": "Right Button"
    },
    {
      "type": "url",
      "id": "right_button_link",
      "label": "Right Button Link"
    },
    {
      "type": "color",
      "id": "second_btn_bg",
      "label": "Second btn background color",
      "default": "#39BBEC"
    },
    {
      "type": "color",
      "id": "second_btn_text",
      "label": "Second btn text color",
      "default": "#231F20"
    },
    {
      "type": "color",
      "id": "steps",
      "label": "Steps title color",
      "default": "#C2C9D6"
    },
    {
      "type": "color_background",
      "id": "gradient_background",
      "label": "Gradient Background",
      "default": "linear-gradient(135deg, #6950A1 0%, #21409A 100%)"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme_inner",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    },
    {
      "type": "header",
      "content": "Mobile Padding"
    },
    {
      "type": "range",
      "id": "padding_mobile_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_mobile_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 40
    }
  ],
  "blocks": [
    {
      "type": "card",
      "name": "Card Block",
      "settings": [
        {
          "type": "text",
          "id": "step_title",
          "label": "Step Title"
        },
        {
          "type": "color",
          "id": "steps_number_color",
          "label": "Steps Number Color",
          "default": "#08024C",
          "info": "This will only apply if the Steps Number Gradient Color is not set."
        },
        {
          "type": "color_background",
          "id": "steps_number_gradient_color",
          "label": "Steps Number Gradient Color",
          "default": "linear-gradient(135deg, #6950A1 0%, #21409A 100%)",
        },
        {
          "type": "text",
          "id": "title",
          "label": "Card Title",
          "default": "Card Title"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Card Content"
        }
      ]
    }
  ],
  "max_blocks": 4,
  "presets": [
    {
      "name": "Custom Slider Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}
