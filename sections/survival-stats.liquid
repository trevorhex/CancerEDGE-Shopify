{{ 'survival-stats.css' | asset_url | stylesheet_tag: preload: true }}


{%- style -%}
  
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.mobile_padding_top }}px;
    padding-bottom: {{ section.settings.mobile_padding_bottom }}px;
  }

  @media screen and (min-width: 750px) {
     
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }

  }
  
  @media screen and (min-width: 1024px) {
    
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }

  }

  {% for block in section.blocks %}

    #block--{{ block.id }} {
      background: {{ block.settings.bg_color }};
    }

    #block--{{ block.id }} * {
      color: {{ block.settings.text_color }};
    }

    #block--{{ block.id }}  .stat-heading:before {
      background: {{ block.settings.border_color }};
    }
  
  {% endfor %}

  
{%- endstyle -%}

<section class="section-{{ section.id }}-padding survival__stats--section">
  <div class="survival__stats--wrapper">
    {% for block in section.blocks %}
      <div class="survival__stats--item" id="block--{{ block.id }}">
        {% if block.settings.heading_icon %}
          <div class="stat-icon">
            {{ block.settings.heading_icon | image_url: width: 100 | image_tag: alt: block.settings.heading_icon | default: 'Heading Icon', fetchpriority: fetch_priority, loading: 'lazy' }}
          </div>
        {% endif %}

        <div class="content__wrapper">
          {% if block.settings.heading %}
            <div class="stat-heading">
              {{ block.settings.heading }}
            </div>
          {% endif %}
    
          {% if block.settings.text %}
            <div class="stat-text">
              {{ block.settings.text }}
            </div>
          {% endif %}
        </div>
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Survival Stats",
  "settings": [
    {
      "type": "header",
      "content": "Desktop Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 0
    },
    {
      "type": "header",
      "content": "Mobile Padding"
    },
    {
      "type": "range",
      "id": "mobile_padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 0
    },
    {
      "type": "range",
      "id": "mobile_padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 0
    }
  ],
  "blocks": [
    {
      "type": "card",
      "name": "Stat Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "heading_icon",
          "label": "Heading Icon"
        },
        {
          "type": "inline_richtext",
          "id": "heading",
          "label": "Heading",
          "default": "99%"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Survival Rateâ€¨Melanoma"
        },
        {
          "type": "header",
            "content": "Color"
        },
        {
          "type": "color_background",
          "id": "bg_color",
          "label": "Background",
          "default": "#ffffff"
        },
        {
          "type": "color_background",
          "id": "text_color",
          "label": "Text Color",
          "default": "#BD306F"
        },
        {
          "type": "color_background",
          "id": "border_color",
          "label": "Border Color",
          "default": "#BD306F"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Survival Stat"
    }
  ]
}
{% endschema %}

