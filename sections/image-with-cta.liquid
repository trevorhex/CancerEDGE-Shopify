{{ 'image-with-cta.css' | asset_url | stylesheet_tag: preload: true }}


{%- style -%}
  
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.mobile_padding_top }}px;
    padding-bottom: {{ section.settings.mobile_padding_bottom }}px;
  }

  .section-{{ section.id }}-padding .heading {
    color: {{ section.settings.text_color }};
  }

  @media screen and (min-width: 750px) {
     
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }

  }
  
  @media screen and (min-width: 1024px) {
    
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }

  }

  {% for block in section.blocks %}

    #block--{{ block.id }} {
      background-image: url({{ block.settings.bg_image | image_url: width: auto, height: auto }});
      background-repeat: no-repeat;
      background-size: cover;
      position: relative;
    }

    #block--{{ block.id }} .block__wrapper--image {
      position: absolute;
      {% if block.settings.bg_profile_image_position == "left" %}
        left: 0;
      {% endif %}
      {% if block.settings.bg_profile_image_position == "right" %}
        right: 0;
      {% endif %}
      bottom: 0;
      width: {{ block.settings.bg_image_width }}%;
    }

    #block--{{ block.id }} .block__wrapper--image img {
      display: inline-block;
      vertical-align: middle;
    }

  @media (max-width:1024px) {
    #block--{{ block.id }} .block__wrapper--image {
      width: 47% !important;
    }
    #block--block_nc89AA .block__wrapper--image {
      width: 30% !important;
    }
  }
  
  {% endfor %}

  
{%- endstyle -%}

<section class="section-{{ section.id }}-padding image-with-cta--section">
  <div class="image__cta--wrapper">
    {% for block in section.blocks %}
      <div class="image__cta--item text--{{ block.settings.text_alignment }}" id="block--{{ block.id }}">
        <div class="block__wrapper">
          {% if block.settings.heading %}
            <h2 class="heading h2">
              {{ block.settings.heading }}
            </h2>
          {% endif %}
          {% if block.settings.button_url %}
            <a href="{{ block.settings.button_url }}" class="button button--secondary">{{ block.settings.button_text }}</a>
          {% endif %} 
        </div>
        <div class="block__wrapper--image">
          {%- assign widths = '198, 432, 642, 900, 1284, 1800' -%}
          {{
              block.settings.bg_profile_image
              | image_url: width: 900
              | image_tag:
                class: 'header__heading-logo',
                widths: widths
          }}
        </div>
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Image With CTA",
  "max_blocks": 2,
  "settings": [
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Desktop Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 0
    },
    {
      "type": "header",
      "content": "Mobile Padding"
    },
    {
      "type": "range",
      "id": "mobile_padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 0
    },
    {
      "type": "range",
      "id": "mobile_padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 0
    }
  ],
  "blocks": [
    {
      "type": "block",
      "name": "Block",
      "settings": [
        {
          "type": "select",
          "id": "text_alignment",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ],
          "default": "left",
          "label": "Text Alignment"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "99%"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Get Started"
        },
        {
          "type": "url",
          "id": "button_url",
          "label": "Button URL"
        },
        {
          "type": "header",
            "content": "Color"
        },
        {
          "type": "image_picker",
          "id": "bg_image",
          "label": "Background Image"
        },
        {
          "type": "image_picker",
          "id": "bg_profile_image",
          "label": "Profile Image"
        },
        {
          "type": "select",
          "id": "bg_profile_image_position",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ],
          "default": "left",
          "label": "Profile Image Position"
        },
        {
          "type": "range",
          "id": "bg_image_width",
          "min": 0,
          "max": 100,
          "step": 5,
          "unit": "%",
          "label": "Background Image Width",
          "default": 50
        },
        {
          "type": "color_background",
          "id": "border_color",
          "label": "Border Color",
          "default": "#BD306F"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image With CTA"
    }
  ]
}
{% endschema %}

