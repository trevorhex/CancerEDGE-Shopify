{{ 'section-contact-form.css' | asset_url | stylesheet_tag }}

{%- style -%}
  
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.5 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.5 | round: 0 }}px;
    background-color: {{ section.settings.bg_color }};
  }

  .section-{{ section.id }}-padding:before {
    content: '';
    background-image: url({{ section.settings.pattern_before | image_url: width: auto, height: auto }});
  }
  
  .section-{{ section.id }}-padding:after {
    content: '';
    background-image: url({{ section.settings.pattern_after | image_url: width: auto, height: auto }});
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding contact__form--wrapper">

  {% if section.settings.pattern_before != blank %}
    <div class="pattern_before">
      {{ section.settings.pattern_before | 
        image_url: width: auto, height: auto | image_tag }}
    </div>
  {% endif %}
  <div class="contact page-width">

    <div class="contact__form--info">

      <div class="contact__form--details">
        {%- if section.settings.heading != blank -%}
          <h2 class="title title-wrapper--no-top-margin inline-richtext {{ section.settings.heading_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
            {{ section.settings.heading }}
          </h2>
        {%- else -%}
          <h2 class="visually-hidden">{{ 'templates.contact.form.title' | t }}</h2>
        {%- endif -%}

        {% if section.settings.phone != blank %}
          <div class="phone">
            <div class="detail_label">
              <h3 style="font-family: var(--font-body-family); font-size: 18px; font-style: normal; font-weight: 400; line-height: normal;">Speak with a Membership Counselor</h3>
            </div>
            <div class="icon__number--wrapper">
              <div class="icon">
                {% render 'icon-contact-email' %}
              </div>
              <div class="detail_text">
                {{ section.settings.phone }}
              </div>
            </div>
          </div>
        {% endif %}

        {% if section.settings.address != blank %}
          <div class="address">
            <div class="detail_label">
              {{ 'templates.contact.form.address_label' | t }}
            </div>
            <div class="icon__number--wrapper">
              <div class="icon">
                {% render 'icon-contact-phone' %}
              </div>
              <div class="detail_text">
                {{ section.settings.address }}
              </div>
            </div>
          </div>
        {% endif %}
      </div>
      <div class="contact__form">
        {% render 'contact-form' %}
      </div>
    </div>
    
  </div>
  {% if section.settings.pattern_after != blank %}
    <div class="pattern_after">
      {{ section.settings.pattern_after | 
        image_url: width: auto, height: auto | image_tag }}
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "t:sections.contact-form.name",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "image_picker",
      "id": "pattern_before",
      "label": "Patter Before"
    },
    {
      "type": "image_picker",
      "id": "pattern_after",
      "label": "Patter After"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color"
    },
    {
      "type": "inline_richtext",
      "id": "heading",
      "default": "t:sections.contact-form.settings.title.default",
      "label": "t:sections.contact-form.settings.title.label"
    },
    {
      "type": "richtext",
      "id": "phone",
      "default": "<p>800-580-0096</p>",
      "label": "Phone"
    },
    {
      "type": "richtext",
      "id": "address",
      "default": "<p>4517 Washington Ave. Manchester, Kentucky 39495</p>",
      "label": "Address"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "t:sections.all.heading_size.options__1.label"
        },
        {
          "value": "h1",
          "label": "t:sections.all.heading_size.options__2.label"
        },
        {
          "value": "h0",
          "label": "t:sections.all.heading_size.options__3.label"
        },
        {
          "value": "hxl",
          "label": "t:sections.all.heading_size.options__4.label"
        },
        {
          "value": "hxxl",
          "label": "t:sections.all.heading_size.options__5.label"
        }
      ],
      "default": "h1",
      "label": "t:sections.all.heading_size.label"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 160,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 160,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "t:sections.contact-form.presets.name"
    }
  ]
}
{% endschema %}
